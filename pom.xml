<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.scijava</groupId>
		<artifactId>pom-scijava</artifactId>
		<version>26.0.0</version>
		<relativePath />
	</parent>

	<version>1.0.2</version>
	<repositories>
	  <!-- NB: for project parent -->
	  <repository>
	    <id>imagej.public</id>
	    <url>http://maven.imagej.net/content/groups/public</url>
	  </repository>  
	</repositories>
	
	<name>PerkinElmer Operetta Importer</name>
	<url>https://imagej.net/Operetta_Importer</url>
	<inceptionYear>2019</inceptionYear>
	<organization>
		<name>BIOP</name>
		<url>https://biop.epfl.ch</url>
	</organization>
	<licenses>
		<license>
			<name>GNU General Public License v3+</name>
			<url>http://www.gnu.org/licenses/gpl.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<developers>
		<developer>
			<id>oburri</id>
			<name>Olivier Burri</name>
			<email>olivier.burri@epfl.ch</email>
			<url>http://biop.epfl.ch</url>
			<organization>EPFL BioImaging And Optics Platform BIOP</organization>
			<organizationUrl>http://epfl.ch</organizationUrl>
			<roles>
				<role>developer</role>
				<role>debugger</role>
				<role>support</role>
				<role>maintainer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
		<developer>
			<id>romainGuiet</id>
			<name>Romain Guiet</name>
			<email>romain.guieti@epfl.ch</email>
			<url>http://biop.epfl.ch</url>
			<organization>EPFL BioImaging And Optics Platform BIOP</organization>
			<organizationUrl>http://epfl.ch</organizationUrl>
			<roles>
				<role>debugger</role>
				<role>support</role>
			</roles>
			<timezone>+1</timezone>
		</developer>

	</developers>
	<contributors>
		<contributor>
			<name>Joao Firmino</name>
			<url>https://www.camilod.ca/the-team</url>
			<properties><id>JoaoFirmino</id></properties>
		</contributor>
	</contributors>

	<mailingLists>
		<mailingList>
			<name>Image.sc Forum</name>
			<archive>https://forum.image.sc</archive>
		</mailingList>
	</mailingLists>
	<issueManagement>
		<url>https://github.com/BIOP/ijp-operetta-importer/issues</url>
		<system>GitHub Issues</system>
	</issueManagement>
	<ciManagement>
		<system>none</system>
		<url>none</url>
	</ciManagement>

	<scm>
		<tag>HEAD</tag>
		<url>https://github.com/BIOP/ijp-operetta-importer.git</url>
	</scm>

	<properties>
		<license.licenseName>gpl_v3</license.licenseName>
		<main-class>Operetta_Importer</main-class>
		<license.copyrightOwners>BIOP</license.copyrightOwners>
		<scijava.app.directory>C:/Fiji/</scijava.app.directory>
		<scijava.app.subdirectory>plugins/BIOP</scijava.app.subdirectory>
	</properties>

	<dependencies>

		<dependency>
			<groupId>ome</groupId>
			<artifactId>bioformats_package</artifactId>
			<version>6.1.0</version>
			<type>pom</type>
			<exclusions>
				<exclusion>
					<!-- NB: Exclude problematic uber-JAR that bundles commons-io. -->
					<groupId>ch.systems.cisd</groupId>
					<artifactId>jhdf5</artifactId>
				</exclusion>
				<exclusion>
					<!-- NB: Exclude problematic xalan bundle -->
					<groupId>xalan</groupId>
					<artifactId>xalan</artifactId>
				</exclusion>
				<exclusion>
				<!-- NB: Exclude problematic xalan bundle -->
				<groupId>xml-apis</groupId>
				<artifactId>xml-apis</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>sc.fiji</groupId>
			<artifactId>fiji-lib</artifactId>
		</dependency>

		<dependency>
			<groupId>net.imagej</groupId>
			<artifactId>imagej</artifactId>
		</dependency>
		<dependency>
			<groupId>org.scijava</groupId>
			<artifactId>scijava-ui-swing</artifactId>
			<version>0.12.0</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>${main-class}</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<groupId>ch.epfl.biop</groupId>
	<artifactId>Operetta_Importer</artifactId>
	<description>Hold your horses</description>
</project>
